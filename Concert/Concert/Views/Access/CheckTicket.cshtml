@model Concert.Models.TicketViewModel

@{
    ViewData["Title"] = "CheckTicket";
}

@if(TempData["Message"] != null)
{
<span class="text-danger"> @Html.Encode(TempData["Message"])</span>
}
<hr />  
@if(TempData["Name"] != null)
{
<span class="text-dark"> @Html.Encode(TempData["Name"])</span>
}
<br />  
@if(TempData["Document"] != null)
{
<span class="text-dark"> @Html.Encode(TempData["Document"])</span>
}
<br />  
@if(TempData["Date"] != null)
{
<span class="text-dark"> @Html.Encode(TempData["Date"])</span>
}
<span asp-validation-for="Id" class="text-danger"></span>

<div class="row">
    <div class="col-md-4 offset-4">
        <h3>Iniciar Sesión</h3>
        <form asp-action="CheckTicket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>        
            
            
            <div class="form-group mt-2">
                <input type="submit" value="Validar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}